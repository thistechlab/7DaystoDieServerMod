<configs>

	<!-- == Food Recipe Changes == -->
	
	<!-- Bacon and Eggs Changes -->
	<set xpath="/recipes/recipe[@name='foodBaconAndEggs']/ingredient[@name='foodRawMeat']/@count">2</set>
	<set xpath="/recipes/recipe[@name='foodBaconAndEggs']/ingredient[@name='foodEgg']/@count">2</set>
	
	<!-- Boiled Meat Changes -->
	<set xpath="/recipes/recipe[@name='foodBoiledMeat']/ingredient[@name='foodRawMeat']/@count">2</set>
	
	<!-- Can of Sham Changes -->
	<set xpath="/recipes/recipe[@name='foodCanSham']/ingredient[@name='foodRawMeat']/@count">5</set>
	<remove xpath="/recipes/recipe[@name='foodCanSham']/ingredient[@name='foodRottingFlesh']"
	/>
	<remove xpath="/recipes/recipe[@name='foodCanSham']/ingredient[@name='resourceBone']"
	/>
	
	<!-- Charred Meat Changes -->
	<set xpath="/recipes/recipe[@name='foodCharredMeat']/ingredient[@name='foodRawMeat']/@count">2</set>
	
	<!-- Chili Dog Changes -->
	<set xpath="/recipes/recipe[@name='foodChiliDog']/ingredient[@name='foodRawMeat']/@count">2</set>
	
	<!-- Fish Tacos Changes -->
	<set xpath="/recipes/recipe[@name='foodFishTacos']/ingredient[@name='foodCornMeal']/@count">2</set>
	
	<!-- Hobo Stew Changes -->
	<remove xpath="/recipes/recipe[@name='foodHoboStew']/ingredient[@name='foodRottingFlesh']"
	/>
	<append xpath="/recipes/recipe[@name='foodHoboStew']">
		<ingredient name="foodRawMeat" count="3" />
	</append>
	<set xpath="/recipes/recipe[@name='foodHoboStew']/ingredient[@name='resourceAnimalFat']/@count">3</set>
	
	<!-- Meat Stew Changes -->
	<set xpath="/recipes/recipe[@name='foodMeatStew']/ingredient[@name='foodRawMeat']/@count">3</set>
	
	<!-- Steak and Potatoes Changes -->
	<set xpath="/recipes/recipe[@name='foodSteakandPotato']/ingredient[@name='foodRawMeat']/@count">2</set>
	
	<!-- Vegetable Stew Changes -->
	<append xpath="/recipes/recipe[@name='foodVegetableStew']">
		<ingredient name="resourceAnimalFat" count="2" />
	</append>
	
	<!-- Food Recipies Changes End -->

</configs>