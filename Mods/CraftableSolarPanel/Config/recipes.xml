<CraftableSolarPanel>
	<append xpath="/recipes" >
		<recipe name="solarbank" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
      <ingredient name="resourceGlassPlate" count="4"/>
      <ingredient name="resourceElectricParts" count="10"/>
      <ingredient name="resourceForgedSteel" count="22"/>
		</recipe>

		<recipe name="solarCell" count="1" craft_area="workbench" tags="learnable,perkAdvancedEngineering,workbenchCrafting">
     <ingredient name="resourceGlassPlate" count="1"/>  
      <ingredient name="resourceElectricParts" count="30"/>
      <ingredient name="resourceScrapPolymers" count="20"/>
      <ingredient name="resourceSilverNugget" count="1"/>      
    </recipe>

    <recipe name="resourceGlassPlate" count="1" material_based="true" craft_area="forge" craft_tool="toolForgeCrucible" tags="perkAdvancedEngineering">
      <ingredient name="unit_glass" count="200"/>
      <ingredient name="unit_stone" count="2"/>
      <ingredient name="unit_lead" count="34"/>
      <ingredient name="unit_iron" count="20"/>
      <ingredient name="unit_clay" count="20"/>
      <effect_group>
        <passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.177,.12" tags="unit_clay,unit_stone,unit_glass,unit_iron,unit_lead"/>
      </effect_group>
    </recipe>
	</append>
</CraftableSolarPanel>